---
import Header from '/src/pages/components/Header.astro';
import Footer from '/src/pages/components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description: string;
    pageID: string;
}
const { pageTitle, pageDescription, pageID } = Astro.props;
---
<!doctype html>
    <html lang="en">

	<head>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

            <meta charset="UTF-8">
		 <title>{pageTitle}</title>
        <meta name="description" content={pageDescription}>
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
		
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-QZ4VCLCM78"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-QZ4VCLCM78');
</script>

	</head>

	<body id={pageID}>
	

 <section id="top_header">
		<div class="wrapper">
             <Header />

        </div>
</section>
    <slot />
    <Footer />

      </body>
</html>
