---
import Header from '/src/pages/components/Header.astro';
import Footer from '/src/pages/components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description: string;
    pageID: string;
}
const { pageTitle, pageDescription, pageID } = Astro.props;
---
<!doctype html>
    <html lang="en">

	<head>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

            <meta charset="UTF-8">
		 <title>{pageTitle}</title>
        <meta name="description" content={pageDescription}>
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- Google Tag Manager -->
<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
